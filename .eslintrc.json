{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    
    "rules": {    
           "brace-style": ["error", "stroustrup"],
           "@typescript-eslint/brace-style": ["error", "stroustrup"],
           "indent":["error", 2],
           "@typescript-eslint/indent": ["error", 2]
       
    }
}
